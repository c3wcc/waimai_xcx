/* pages/common/auth_phone.wxss */

/* 遮罩层 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* 弹出层 */

.modalDlg {
  width: 75%;
  position: fixed;
  top: 50px;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
}
.modalDlg form{
  width: 100%;
}
.phone_container {
  font-size: 30rpx;
  padding: 30rpx;
  border-bottom:1rpx solid #f0f0f0;
}

.phone_container::after {
  display: block;
  content: "";
  clear: both;
}

.phone_container input {
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  width:200rpx;
}

 .getcode {
  font-size: 22rpx;
  background: #fcfcfc;
  padding: 0 10rpx;
  margin-top: 5rpx;
  height: 50rpx;
  line-height: 50rpx;
  float: right;
}

.policy {
  font-size: 22rpx;
  text-align: center;
  margin-top: 20rpx;
}
.bindphone{
    width: 70%;
  background-color: white;
  text-align: center;
  /* color: white; */
  margin:  50rpx auto 8px auto;
  /* border-radius: 50px; */
  font-size:25rpx;
}
.ok {
  width: 75%;
  background-color: #ff6c00;
  text-align: center;
  color: white;
  margin:  40rpx auto 10px auto;
  border-radius: 50px;
  font-size: 34rpx;
  height:70rpx;
  line-height:70rpx;
}
